<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="36sp"
        android:textColor="@color/colorBlack"
        android:text="@string/history"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="115dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="@color/colorGrey">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:text="@string/displaySub"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="35sp"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:text="@string/ranklvl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="70sp"
            android:textSize="26sp"
            android:textColor="@color/colorBlack"
            android:text="Master Sergeant"
            android:id="@+id/displaySubmisison" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="205dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:text="@string/displayUp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="35sp"
            android:textSize="30sp"
            android:text="@string/ranklvl"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="70sp"
            android:textSize="26sp"
            android:text="Staff Sergeant"
            android:id="@+id/displayUpdate"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/buttonBack22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonReturn"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="239dp" />
    </LinearLayout>
</LinearLayout>